// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id                 Int               @id @default(autoincrement())
  first_name         String            @unique
  last_name          String?
  email              String            @unique
  password           String
  layout             String
  user_metric_data User_metric_data[]
}

model User_metric_data {
  id           Int       @id @default(autoincrement())
  user_id    Int?
  User       Users?  @relation(fields: [user_id], references: [id])
  metric_id    Int?
  Metric       Metrics?  @relation(fields: [metric_id], references: [id])
  date         DateTime  @default(now())
  metric_value Int
}

model Metrics {
  id                 Int               @id @default(autoincrement())
  property_id  Int?
  Property    Properties? @relation(fields: [property_id], references: [id])
  name String
  unit String
  user_metric_data User_metric_data[]
}

model Properties {
  id        Int      @id @default(autoincrement())
  property  String
  metrics   Metrics[]
}
